<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Выбор папки с профилями" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160" Click="SelectProfile_Click"/>
        <TextBlock Name="ProfilePath" HorizontalAlignment="Left" Margin="175,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="607"/>
        <Button Content="Выбор Viber клиента" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="160" RenderTransformOrigin="-0.747,0.091" Click="SelectViberClient_Click"/>
        <TextBlock Name="ViberClientPath" HorizontalAlignment="Left" Margin="175,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="607"/>
        <Button Content="Старт" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="75" Click="Start_Click"/>
    </Grid>
</Window>
